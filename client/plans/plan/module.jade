template(name="module")
  .module.card2(id="{{_id}}")
    .card-header
      .title {{moduleName}}
      if isOwner
        .menu
          +UI.dynamic template="menuButton" data=moduleMenuData

    .card-divider

    if isContent
      .card-content 
        .module-link 
          a(href="{{moduleLink}}", target="_blank") {{moduleLink}}
        .module-description {{moduleDescription}}
      .card-divider

    if tasks
      .card-content
        .tasks.list
          each tasks
            +task



