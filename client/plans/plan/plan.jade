template(name="progress")
  .progress
    .progress-bar-container
      .progress-bar(style="width: {{percentage}}")
    .progress-percentage-container
      .progress-percentage {{percentage}}

template(name="plan")
  #plan
    .container
      if isUserPlan
        div(style="height: 96px;")
        +progress
      else
        div(style="height: 20px;")


      .plan2.card2
        .card-header
          .title {{planName}}
          if isOwner
            .menu
              +UI.dynamic template="menuButton" data=planMenuData
          else
        .card-divider

        if isContent
          .card-content 
            .plan-link
              a(href="{{planLink}}", target="_blank") {{planLink}}
            .plan-description {{planDescription}}
          .card-divider

        unless isOwner
          .card-footer 
            .buttons
              if isFollowed
                .button.raised-button.unfollow unfollow
              else
                .button.raised-button.follow follow

      br
      br
      br

      .sortableData
        each modules
          +module


      br
      br
      br
      br
      br
