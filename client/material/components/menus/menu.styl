.material-menu-button
  display inline-block
  //background lightblue
  cursor pointer
  position relative

  .material-menu-icon
    width 48px
    height 48px
    line-height 48px
    text-align center
    //&:not(:hover)
    //  color: rgba(0, 0, 0, 0.2);
    &:hover
      // box-shadow parameters are from
      // http://www.polymer-project.org/components/core-menu-button/demo.html
      box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.12), 0 0 0 1px rgba(0, 0, 0, 0.1)
    &:active
      background-color rgba(0, 0, 0, 0.05)
      box-shadow inset 0 1px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.12)


  .material-menu
    position absolute
    top -1px
    right -1px

