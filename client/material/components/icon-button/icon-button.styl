.icon-button
  //outline 1px solid blue
  width 24px
  height 24px
  padding 12px
  font-size 24px
  text-align center
  cursor pointer
  i
    vertical-align text-top

  &:hover
    // box-shadow parameters are from
    // http://www.polymer-project.org/components/core-menu-button/demo.html
    box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.12), 0 0 0 1px rgba(0, 0, 0, 0.1)
  &:active
    background-color rgba(0, 0, 0, 0.05)
    box-shadow inset 0 1px 0 0 rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.12)


