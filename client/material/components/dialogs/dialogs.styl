@import nib
// shadow
shadow(z-depth=1)
  // box-shadow( x-offset, y-offset, blur, 0px, rgba(0, 0, 0, opacity) )
  if z-depth == 1
    box-shadow: 0 0px 1.5px 0px rgba(0, 0, 0, 0.12), 0 1px 1px 0px rgba(0, 0, 0, 0.24)
  else if z-depth == 2
    box-shadow 0 0px 3px 0px rgba(0, 0, 0, 0.16), 0 3px 3px 0px rgba(0, 0, 0, 0.23)
  else if z-depth == 3
    box-shadow 0 0px 10px 0px rgba(0, 0, 0, 0.19), 0 6px 3px 0px rgba(0, 0, 0, 0.23)
  else if z-depth == 4
    box-shadow 0 0px 14px 0px rgba(0, 0, 0, 0.25), 0 10px 5px 0px rgba(0, 0, 0, 0.22)
  else if z-depth == 5
    box-shadow 0 0px 30px 0px rgba(0, 0, 0, 0.30), 0 15px 6px 0px rgba(0, 0, 0, 0.22)


.material-dialog-background

  background transparent
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 100


  .material-dialog
    max-width calc(100% - 32px)
    width 600px
    max-height calc(100% - 32px)
    margin 0 auto
    background white
    shadow 3
    border-radius 2px
    overflow scroll

    position relative
    top 50%
    transform translateY(-50%)

    .dialog-title
      padding 24px
      //FIXME
      font-size 20px
      font-weight 500
      //typog-headline()

    .dialog-content
      padding 24px
      margin-bottom 20px

    .dialog-actions
      padding-left 16px
      padding-right 16px
      padding-bottom 16px

      clearfix()
      .button
        float right

      .button
        text-align center
        width 88px
        height 36px
        line-height 36px
        margin 0

    
